<UserControl x:Class="Presentation_App.LabelInspectorContol"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentation_App"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="200">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="20">

        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            
            <!-- Name of object selected-->
            <TextBlock x:Name="selectedobjectName" FontSize="22" Text="Title" HorizontalAlignment="Center" FontWeight="Bold"/>
            
            <!-- Font Size -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,0">
                <TextBlock Text="Font Size: " FontSize="18" FontWeight="Bold" Margin="0,0,10,0"/>
                <TextBox x:Name="fontSizeInput" FontSize="18" TextChanged="TextBox_TextChanged"/>
            </StackPanel>
            
        </StackPanel>

    </Grid>
</UserControl>
