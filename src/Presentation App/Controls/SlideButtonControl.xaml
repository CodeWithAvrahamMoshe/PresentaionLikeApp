<UserControl x:Class="Presentation_App.SlideButtonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentation_App"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="200">
    <Grid Background="Transparent">
        <Border BorderThickness="1">
            <StackPanel Orientation="Horizontal">

                <!-- Icon -->
                <Border Margin="0" Background="Transparent">
                    <TextBlock x:Name="Icon" Text="&#xf05a;" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="{StaticResource FontAwesome}"/>
                </Border>

                <!-- Slide Type -->
                <Border Margin="5 0">
                    <TextBox x:Name="SlideText" Text="Sample Slide" FontSize="16" BorderBrush="{x:Null}"
                               HorizontalAlignment="Left" VerticalAlignment="Center" Background="{x:Null}"
                               TextAlignment="Left" TextWrapping="Wrap" TextChanged="SlideText_TextChanged" Width="167" FontWeight="Bold"/>
                </Border>
                
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
