<Window x:Class="Presentation_App.SlideShowForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation_App"
        mc:Ignorable="d"
        Title="SlideShowForm" Height="450" Width="800" WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize"
        WindowState="Maximized" Topmost="True">
    <Grid>
        <MediaElement Height="0" Width="0" 
                      Source="ms-appx:///C:/Users/Momo/Desktop/New Presentation/Audio"/>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"
               Panel.ZIndex="0"/>

        <Label x:Name="slideIndicator"
               HorizontalAlignment="Right"
               VerticalAlignment="Bottom"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Top"
               FontSize="25"
               Panel.ZIndex="1"
               FontWeight="Bold"
               Content="0/0"/>
    </Grid>
</Window>
